<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<h1>Edit user</h1>
		<p>With Bootstrap form builder</p>
		<%= bootstrap_form_for :user, url: user_path(@user), method: :patch do |user_f| %>
			<%= user_f.text_field :name, label: "Name" %>
			<%= user_f.email_field :email, label: "Email" %>
			<%= user_f.submit "Update" %>
			<%= link_to "Listing users", users_path %>
		<% end %>
	</div>
</div>