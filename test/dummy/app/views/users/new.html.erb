<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<h1>New user</h1>
		<p>With Bootstrap form builder</p>
		<%= bootstrap_form_for @user, url: { action: "create" }, layout: :horizontal do |user_f| %>
			<%= user_f.text_field :name, label: "Name" %>
			<%= user_f.email_field :email, label: "Email" %>
			<%= user_f.submit "Submit" %>
		<% end %>
	</div>
</div>