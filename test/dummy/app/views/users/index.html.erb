<div class="row">
	<div class="col-md-offset-3 col-md-6">
		<h1>Listing users</h1>
 
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th>Links</th>
				</tr>
			</thead>
			<% @users.each do |user| %>
			<tbody>
				<tr>
					<td><%= user.name %></td>
					<td><%= user.email %></td>
					<td><%= link_to "Edit", edit_user_path(user) %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
		<%= link_to "Create new user", new_user_path %>
	</div>
</div>
